generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id                 String    @id
  name               String
  description        String
  price              Float
  discountPercentage Float?
  promotionEndDate   DateTime?
  tags               String[]
  brand              String?
  quantity           String?
  weight             Float?
  colors             String[]
  imageUrl           String?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime
  category           String
}
